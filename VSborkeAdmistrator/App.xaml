        <!--TextBoxes Styles-->

        <Style TargetType="TextBox" x:Key="ProfileTextEnter">
            <Setter Property="FontFamily" Value="Resources/Fonts/#Raleway"/>
        </Style>

        <Style TargetType="TextBox" x:Key="NumbersTextEnter">
            <Setter Property="FontFamily" Value="Resources/Fonts/#Agency FB Cyrillic"/>
        </Style>

        <Style TargetType="TextBox" x:Key="PriceTextEnter">
        <Setter Property="FontFamily" Value="Resources/Fonts/#Helvetica"/>
        </Style>

        <!--Buttons Style-->

        <Style TargetType="Button" x:Key="MenuBtn">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Resources/Fonts/#Agency FB Cyrillic"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!--Default Button-->
        <Style TargetType="Button" x:Key="BorderBtn">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#FF3881EF" />
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF3881EF"/>
