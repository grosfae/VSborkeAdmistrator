<Page x:Class="VSborkeAdmistrator.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VSborkeAdmistrator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1130"
      Title="UsersPage">

    <Grid Background="#FFEEF0F2">
        <ScrollViewer>
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBlock Style="{StaticResource Header}" Foreground="Black" Text="Контроль учетных записей" FontSize="46" Margin="50 15 0 20"/>
                        <Line X1="500" Y1="45" X2="1070" Y2="45" Stroke="#FF3881EF" StrokeThickness="2"/>
                    </Grid>
                    <ListView Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Height="400" Background="White" Width="1030" Grid.Row="1">
                                    <StackPanel Width="300">
                                        <Border CornerRadius="150" Width="200" Height="200" Margin="0 30 0 0">
                                            <Border.Background>
                                                <ImageBrush Stretch="Fill" x:Name="ProfImg"/>
                                            </Border.Background>
                                        </Border>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                                            <TextBlock x:Name="TbName" Style="{StaticResource ProfileInfo}" FontWeight="SemiBold" FontSize="30"/>
                                            <TextBlock x:Name="TbSurname" Style="{StaticResource ProfileInfo}" FontWeight="SemiBold" FontSize="30" Margin="10 0 0 0"/>
                                        </StackPanel>
                                        <TextBlock x:Name="TbPatronymic" Style="{StaticResource ProfileInfo}" FontWeight="SemiBold" FontSize="30" Margin="0 10 0 0" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <Line X1="0" Y1="400" X2="0" Y2="0" Stroke="#FFEEF0F2" StrokeThickness="3"/>
                                    <StackPanel Width="730">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="129*"/>
                                                <ColumnDefinition Width="236*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="90"/>
                                                <RowDefinition Height="90"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Margin="10 30 0 0" Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="20" Text="Пол: "/>
                                                <TextBlock x:Name="TbGender" Style="{StaticResource ProfileInfo}" FontSize="20" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <StackPanel Margin="10 30 0 0" Orientation="Horizontal" Grid.Column="1">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="20" Text="Адрес: "/>
                                                <TextBlock x:Name="TbAddress" Style="{StaticResource ProfileInfo}" FontSize="20" FontWeight="SemiBold" TextWrapping="Wrap" Width="340"/>
                                            </StackPanel>
                                            <StackPanel Margin="10 30 0 0" Grid.Row="1">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="20" Text="Электронная почта: "/>
                                                <TextBlock x:Name="TbEmail" Style="{StaticResource ProfileInfo}" FontSize="20" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <StackPanel Margin="10 10 0 0" Orientation="Vertical" Grid.Row="2">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="20" Text="Номер телефона: "/>
                                                <TextBlock x:Name="TbPhone" Style="{StaticResource ProfileInfo}" FontSize="20" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <StackPanel Margin="10 30 0 0" Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="20" Text="Должность: "/>
                                                <TextBlock x:Name="TbRole" Style="{StaticResource ProfileInfo}" FontSize="20" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel Orientation="Horizontal" Margin="10 0 0 0" Height="100">
                                            <Button x:Name="ProfileEditBtn" Width="230" Height="35" Style="{StaticResource BorderBtn}" Content="Изменить профиль"/>
                                            <StackPanel Margin="70 0 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="20" Text="Заполнение профиля:"/>
                                                <Grid Height="35" Margin="0 10 0 0">
                                                    <ProgressBar Width="400" x:Name="PbProfileProgress" Background="#FFAFAFAF" Foreground="#FF3881EF" HorizontalAlignment="Left"/>
                                                    <TextBlock x:Name="TbCountProgress" Style="{StaticResource Header}" Foreground="White" HorizontalAlignment="Center" FontSize="30" Text="0%"/>
                                                </Grid>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
