<Page x:Class="VSborkeAdmistrator.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VSborkeAdmistrator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="579" d:DesignWidth="1000"
      Title="LoginPage">

    <Grid Background="White" >
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <TextBlock Text="Логин" Style="{StaticResource Header}" FontSize="30"/>
            <TextBox x:Name="TbLogin" Height="35" FontSize="25" MaxLength="20"/>
            <TextBlock Text="Пароль" Style="{StaticResource Header}" FontSize="30"/>
            <PasswordBox x:Name="PbPassword" Height="35"  FontSize="25" Tag="Пароль"  MaxLength="20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="30" Margin="10">
                <Viewbox>
                    <CheckBox Content="Запомнить меня" Style="{StaticResource CbContent}" BorderBrush="#FF3881EF"/>
                </Viewbox>
            </StackPanel>
            <Button Width="200" Height="30" Style="{StaticResource BorderBtn}">
                
            </Button>
        </StackPanel>
    </Grid>
</Page>
