<Page x:Class="VSborkeAdmistrator.Pages.ComputerCaseEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VSborkeAdmistrator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="2130" d:DesignWidth="1130"
      Title="ComputerCaseEditPage">

    <Grid Background="#FFEEF0F2">
        <ScrollViewer>
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="530"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBlock Style="{StaticResource Header}" Foreground="Black" Text="Менеджмент корпуса" FontSize="46" Margin="50 15 0 20"/>
                        <Line X1="410" Y1="45" X2="1070" Y2="45" Stroke="#FF3881EF" StrokeThickness="2"/>
                    </Grid>
                    <StackPanel Grid.Row="1" Background="White" Width="1030" Height="530">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="10 10 0 0">
                                <Image Width="400" Height="400"/>
                                <Button x:Name="MainImageBtn" Width="300" Height="35" Style="{StaticResource BorderBtn}" Content="Изменить главное изображение" Margin="0 20 0 0"/>
                            </StackPanel>
                            <StackPanel>
                                <StackPanel Margin="10 10 0 0">
                                    <TextBlock Style="{StaticResource ProfileInfo}" FontSize="26" Text="Название: "/>
                                    <TextBox Text="{Binding Name}" Width="530" Style="{StaticResource  ProfileTextEnter}" FontSize="26" HorizontalAlignment="Left" Margin="0 10 0 0" MaxLength="50"/>
                                </StackPanel>
                                <StackPanel Margin="10 10 0 0">
                                    <TextBlock Style="{StaticResource ProfileInfo}" FontSize="26" Text="Описание: "/>
                                    <TextBox Text="{Binding Description}" Width="530" Height="200" Style="{StaticResource  ProfileTextEnter}" FontSize="24" HorizontalAlignment="Left" Margin="0 10 0 0" AcceptsReturn="True" TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel Margin="10 10 0 0">
                                    <TextBlock Style="{StaticResource ProfileInfo}" FontSize="26" Text="Цена: "/>
                                    <TextBox Text="{Binding Price}" Width="200" Style="{StaticResource  NumbersTextEnter}" FontSize="26" HorizontalAlignment="Left" Margin="0 10 0 0" PreviewTextInput="TextBox_PreviewTextInput_1" MaxLength="6"/>
                                </StackPanel>
                                <StackPanel Margin="10 10 0 0">
                                    <TextBlock Style="{StaticResource ProfileInfo}" FontSize="26" Text="Производитель: "/>
                                    <ComboBox x:Name="CbManufacturer" SelectedItem="{Binding Manufacturer}" DisplayMemberPath="Name" Height="35" Width="200" FontSize="26" HorizontalAlignment="Left" Margin="0 10 0 0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Background="White" Width="1030" Height="2000" Margin="0 20 0 0">
                        <StackPanel Margin="20 0 20 0">
                            <TextBlock Style="{StaticResource ProfileInfo}" Text="Характеристики корпуса" FontWeight="SemiBold" FontSize="30"/>
                            <StackPanel Margin="0 20 0 0">
                                <TextBlock Style="{StaticResource ProfileInfo}" Text="Форм-фактор и габариты" FontWeight="SemiBold" FontSize="22"/>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Margin="0 10 0 0" Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Длина: "/>
                                                <TextBox Text="{Binding Length}" Width="60" MaxLength="3" Style="{StaticResource  NumbersTextEnter}" FontSize="22" HorizontalAlignment="Left" PreviewTextInput="TextBox_PreviewTextInput_1" Margin="18 0 0 0" ToolTip="Указать в мм"/>
                                            </StackPanel>
                                            <StackPanel Margin="50 10 0 0" Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Ширина: "/>
                                                <TextBox Text="{Binding Width}" Width="60" MaxLength="3" Style="{StaticResource  NumbersTextEnter}" FontSize="22" HorizontalAlignment="Left" PreviewTextInput="TextBox_PreviewTextInput_1" ToolTip="Указать в мм"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Margin="0 20 0 0" Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Высота: "/>
                                                <TextBox Text="{Binding Height}" Width="60" MaxLength="3" Margin="7 0 0 0" Style="{StaticResource  NumbersTextEnter}" FontSize="22" HorizontalAlignment="Left" PreviewTextInput="TextBox_PreviewTextInput_1" ToolTip="Указать в мм"/>
                                            </StackPanel>
                                            <StackPanel Margin="50 20 0 0" Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Вес: "/>
                                                <TextBox Text="{Binding Width}" Width="60" MaxLength="3" Margin="46 0 0 0" Style="{StaticResource  NumbersTextEnter}" FontSize="22" HorizontalAlignment="Left" PreviewTextInput="TextBox_PreviewTextInput_1" ToolTip="Указать в кг"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Margin="100 0 0 0">
                                        <StackPanel Margin="10 10 0 0" Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Типоразмер корпуса: " Height="28"/>
                                            <ComboBox x:Name="CbFormFactor" SelectedItem="{Binding FormFactor}" Margin="122 0 0 0" DisplayMemberPath="Name" Height="28" Width="160" FontSize="22"/>
                                        </StackPanel>
                                        <StackPanel Margin="10 10 0 0" Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Ориентация материнской платы: " Height="28"/>
                                            <ComboBox x:Name="CbOrientationMotherboard" SelectedItem="{Binding OrientationMotherboard}" DisplayMemberPath="Name" Height="28" Width="160" FontSize="22"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Margin="0 20 0 0">
                                <TextBlock Style="{StaticResource ProfileInfo}" Text="Внешний вид" FontWeight="SemiBold" FontSize="22"/>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Основной цвет: " Height="28"/>
                                                <ComboBox x:Name="CbPrimaryColor" SelectedItem="{Binding PrimaryColor}" DisplayMemberPath="Name" Height="28" Width="160" FontSize="22" Margin="75 0 0 0"/>
                                                <Border Width="40" Height="40" Margin="30 0 0 0" BorderBrush="Black" BorderThickness="1">
                                                    <Rectangle Height="40" Width="40" Fill="{Binding PrimaryColor.HEXCode}"></Rectangle>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Дополнительный цвет: " Height="28"/>
                                                <ComboBox x:Name="CbSecondaryColor" SelectedItem="{Binding SecondColor}" DisplayMemberPath="Name" Height="28" Width="160" FontSize="22"/>
                                                <Border Width="40" Height="40" Margin="30 0 0 0" BorderBrush="Black" BorderThickness="1">
                                                    <Rectangle Height="40" Width="40" Fill="{Binding SecondColor.HEXCode}"></Rectangle>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Материалы корпуса: " Height="28"/>
                                                <ComboBox x:Name="CbMaterialSet" SelectedItem="{Binding MaterialSet}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" Margin="23 0 0 0"/>
                                            </StackPanel>
                                            <StackPanel Margin="0 20 0 0" Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Толщина металла: "/>
                                                <TextBox Text="{Binding Width}" Width="80" MaxLength="4" Margin="49 0 0 0" Style="{StaticResource  NumbersTextEnter}" FontSize="22" HorizontalAlignment="Left" PreviewTextInput="TextBox_PreviewTextInput" ToolTip="Указать в десятичном виде. Пример: 0.45"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Материал передней панели: " TextWrapping="Wrap" Width="230" Height="50"/>
                                                <ComboBox x:Name="CbFrontPanelMaterial" SelectedItem="{Binding FrontPanelMaterial}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" HorizontalAlignment="Left" Margin="15 0 0 0"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Margin="130 10 0 0">
                                            <Viewbox Height="36">
                                                <CheckBox Style="{StaticResource CbContent}" IsChecked="{Binding WindowOnSide}" Content="Окно на боковой стенке" />
                                            </Viewbox>
                                            <StackPanel Orientation="Vertical" Margin="0 20 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Расположение окна: " Height="28"/>
                                                <ComboBox x:Name="CbAlignmentWindow" SelectedItem="{Binding WindowAlignment}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" HorizontalAlignment="Left" Margin="0 10 0 0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical" Margin="0 20 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Материалы окна: " Height="28"/>
                                                <ComboBox x:Name="CbMaterialWindow" SelectedItem="{Binding WindowMaterial}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" HorizontalAlignment="Left" Margin="0 10 0 0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="0 20 0 0">
                                <TextBlock Style="{StaticResource ProfileInfo}" Text="Подсветка" FontWeight="SemiBold" FontSize="22"/>
                                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Vertical">
                                            <Viewbox Height="36" HorizontalAlignment="Left">
                                                <CheckBox Style="{StaticResource CbContent}" IsChecked="{Binding RGB}" Content="Наличие RGB - подсветки" />
                                            </Viewbox>
                                            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Тип подсветки: " Height="28"/>
                                                <ComboBox x:Name="CbTypeRGB" SelectedItem="{Binding TypeRGB}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" Margin="57 0 0 0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Цвет подсветки: " Height="28"/>
                                                <ComboBox x:Name="CbColorRGB" SelectedItem="{Binding ColorRGB}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" HorizontalAlignment="Left" Margin="43 0 0 0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Способ управления подсветкой: " TextWrapping="Wrap" Width="220" Height="60"/>
                                                <ComboBox x:Name="CbTypeManagmentRGB" SelectedItem="{Binding TypeManagmentRGB}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" HorizontalAlignment="Left" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            
                            
                            <StackPanel Margin="0 20 0 0">
                                <TextBlock Style="{StaticResource ProfileInfo}" Text="Совместимость" FontWeight="SemiBold" FontSize="22"/>
                                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Style="{StaticResource ProfileInfo}" Text="Форм-фактор совместимых плат" FontSize="22" Margin="0 0 0 10"/>
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel>
                                                    <Viewbox Height="36" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="CbEatx" Style="{StaticResource CbContent}" Content="E-ATX" />
                                                    </Viewbox>
                                                    <Viewbox Height="36" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="CbFlex" Style="{StaticResource CbContent}" Content="Flex-ATX" />
                                                    </Viewbox>
                                                    <Viewbox Height="36" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="CbMicro" Style="{StaticResource CbContent}" Content="Micro-ATX" />
                                                    </Viewbox>
                                                    <Viewbox Height="36" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="CbDtx" Style="{StaticResource CbContent}" Content="Mini-DTX" />
                                                    </Viewbox>
                                                    <Viewbox Height="36" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="CbItx" Style="{StaticResource CbContent}" Content="Mini-ITX" />
                                                    </Viewbox>
                                                </StackPanel>
                                                <StackPanel Margin="30 0 0 0">
                                                    <Viewbox Height="36" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="CbCeb" Style="{StaticResource CbContent}" Content="SSI-CEB" />
                                                    </Viewbox>
                                                    <Viewbox Height="36" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="CbEeb" Style="{StaticResource CbContent}" Content="SSI-EEB" />
                                                    </Viewbox>
                                                    <Viewbox Height="36" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="CbStandart" Style="{StaticResource CbContent}" Content="Standart-ATX" />
                                                    </Viewbox>
                                                    <Viewbox Height="36" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="CbThin" Style="{StaticResource CbContent}" Content="Thin Mini-ITX" />
                                                    </Viewbox>
                                                    <Viewbox Height="36" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="CbXl" Style="{StaticResource CbContent}" Content="XL-ATX" />
                                                    </Viewbox>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Margin="124 0 0 0">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Форм-фактор совместимого блока питания: "/>
                                                <ComboBox x:Name="CbFormPowerBlock" SelectedItem="{Binding PowerBlockStandartSupport}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" HorizontalAlignment="Left" Margin="0 5 0 0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Расположение блока питания: "/>
                                                <ComboBox x:Name="CbAlignmentPowerBlock" SelectedItem="{Binding AlignmentPowerBlock}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" HorizontalAlignment="Left" Margin="0 5 0 0"/>
                                            </StackPanel>
                                            <StackPanel Margin="0 20 0 0" Orientation="Vertical">
                                                <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Маскимальная длина блока питания: "/>
                                                <TextBox Text="{Binding MaxLengthPowerBlock}" Width="80" MaxLength="3" Style="{StaticResource  NumbersTextEnter}" FontSize="22" HorizontalAlignment="Left" PreviewTextInput="TextBox_PreviewTextInput" ToolTip="Указать в мм"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0 20 0 0" Orientation="Horizontal">
                                    <StackPanel>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Горизонтальные слоты расширения: "/>
                                            <ComboBox x:Name="CbHorizontalAddonsSlot" SelectedItem="{Binding HorizontalAddonsSlot}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" HorizontalAlignment="Left" Margin="0 5 0 20"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Вертикальные слоты расширения: "/>
                                            <ComboBox x:Name="CbVerticalAddonSlot" SelectedItem="{Binding VerticalAddonSlot}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" HorizontalAlignment="Left" Margin="0 5 0 20"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Количество отсеков 2.5 накопителей: "/>
                                            <ComboBox x:Name="Cb" SelectedItem="{Binding VerticalAddonSlot}" DisplayMemberPath="Name" Height="28" Width="200" FontSize="22" HorizontalAlignment="Left" Margin="0 5 0 20"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Margin="80 0 0 0">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Маскимальная длина видеокарты: "/>
                                            <TextBox Text="{Binding MaxLengthVideocard}" Width="80" MaxLength="3" Style="{StaticResource  NumbersTextEnter}" FontSize="22" HorizontalAlignment="Left" PreviewTextInput="TextBox_PreviewTextInput" ToolTip="Указать в мм" Margin="0 10 0 0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" Margin="0 15 0 0">
                                            <TextBlock Style="{StaticResource ProfileInfo}" FontSize="22" Text="Маскимальная высота процессорного кулера: "/>
                                            <TextBox Text="{Binding MaxHeightCPUCooler}" Width="80" MaxLength="3" Style="{StaticResource  NumbersTextEnter}" FontSize="22" HorizontalAlignment="Left" PreviewTextInput="TextBox_PreviewTextInput" ToolTip="Указать в мм" Margin="0 10 0 0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
